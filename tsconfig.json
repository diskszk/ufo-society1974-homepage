{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "allowSyntheticDefaultImports": true,
    "strict": true,

    // viteを使うのに必要
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/?(*.)+(spec|test).+(ts|tsx|js)"]
}
